<h1>Курсы</h1>

{{#if courses.length}}
<div class="row">
{{#each courses}}
    <div class="col s4">
        <div class="card">
            <div class="card-image">
                <img src="{{img}}" alt="{{title}}">
                
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action custom-action">
                <a href="/courses/{{id}}" target="_blank">Открыть курс</a>
                <a href="/courses/{{id}}/edit?allow=true">Редактировать курс</a>
                <form action="/card/add" method="post" class="form-action">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-primary">Купить</button>
                </form>
            </div>
        </div>
    </div>

{{/each}}
</div>
{{else}}
<p>Курсов пока нет</p>
{{/if}}