<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
         <span class="helper-text" data-error="Ошибка" data-success="Верно"></span>
    </div>
    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required value="{{course.price}}">
        <label for="price">Цена курса</label>
         <span class="helper-text" data-error="Ошибка" data-success="Верно"></span>
    </div>
    <div class="input-field">
        <input id="image" type="text" name="img" class="validate" required value="{{course.img}}">
        <label for="image">Картинка</label>
        <span class="helper-text" data-error="Ошибка" data-success="Верно"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Добавить курс</button>
</form>