<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="titles" type="text" name="title" class="validate" required>
        <label for="title">Название курса</label>
         <span class="helper-text" data-error="Ошибка" data-success="Верно"></span>
    </div>
    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required >
        <label for="price">Цена курса</label>
         <span class="helper-text" data-error="Ошибка" data-success="Верно"></span>
    </div>
    <div class="input-field">
        <input id="image" type="text" name="img" class="validate" required>
        <label for="image">Картинка</label>
        <span class="helper-text" data-error="Ошибка" data-success="Верно"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить курс</button>
</form>